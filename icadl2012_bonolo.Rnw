\begin{frame}

\frametitle{Performance - Directory Strucutre}

\begin{center}
  %\includegraphics[width=.95\textwidth]{figure.png}
<<eval-perf, fig=TRUE, echo=FALSE, height=4>>=
ps.options(pointsize=10,family="serif")
bonoloperf <- read.table("bonoloperf.dat", header=T, sep="\t")
plot_colors <- c("blue", "red")
plot(bonoloperf$Initial, type="o", col=plot_colors[1], ylim=c(0,10), axes=FALSE, ann=FALSE)
op <- par(family = "serif")
axis(1, at=1:5, lab=c("1,024", "2,048", "4,096", "8,192", "16,384"))
axis(2, las=1, at=1*0:10)
lines(bonoloperf$Page, type="o", pch=22, lty=2, col=plot_colors[2])
title(xlab="Files in directory")
title(ylab="Time (seconds)")
legend(1, 10, c("Initial Load", "Page Load"), cex=0.8, col=plot_colors, pch=21:22, lty=1:2)
box("outer", "dotted")
@  
\end{center}

