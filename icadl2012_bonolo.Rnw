\frametitle{UX - End User Interface}

\begin{center}
  %\includegraphics[width=.95\textwidth]{figure.png}
<<eval-ux-ui, fig=TRUE, echo=FALSE, height=4>>=
ps.options(pointsize=10,family="serif")
bonoloui <- read.table("bonoloui.dat", header=T, sep="\t")
par(xpd=T, mar=par()$mar+c(0,0,0,8))
barplot(as.matrix(bonoloui), beside=TRUE, family="serif", xlab="Average UX ratings", ylab="Survey Participants", ylim=c(0,5), col=rainbow(7), cex.axis=0.8, las=1, space=c(0, 4), names.arg=c("Search&\nBrowse", "Navigability", "Similarity", "General"), cex=0.8)
op <- par(family = "serif")
legend(50,4.5, c("Intuitive", "Simple", "Satisfied", "Expected", "Response", "Effective", "Beneficial"), cex=0.8, fill=rainbow(7));
box("outer", "dotted")
@  
\end{center}

\end{frame}


